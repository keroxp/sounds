{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": ["dom","esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}